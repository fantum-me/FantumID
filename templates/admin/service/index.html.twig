{% extends '/base.html.twig' %}

{% block title %}ServiceProvider index{% endblock %}

{% block body %}
    <h1>ServiceProvider index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Api Key</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for service_provider in service_providers %}
            <tr>
                <td>{{ service_provider.id }}</td>
                <td>{{ service_provider.name }}</td>
                <td>{{ service_provider.apiKey }}</td>
                <td>
                    <a href="{{ path('app_service_show', {'id': service_provider.id}) }}">show</a>
                    <a href="{{ path('app_service_edit', {'id': service_provider.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_service_new') }}">Create new</a>
{% endblock %}
