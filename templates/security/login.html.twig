{% extends 'base.html.twig' %}

{% block title %}Sign in{% endblock %}

{% block body %}
	<form method="post">
		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
		<div class="w-screen h-screen flex-center flex-col gap-6">
			<div class="border border-outline rounded py-12 px-10 space-y-6">
				{% if error %}
					<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				<div class="flex-center flex-col gap-3">
					<span class="w-8 text-center">
						{{ source('logo.svg') }}
					</span>

					<h1 class="text-center text-2xl font-semibold pb-3">Sign in to {{ app_name }}</h1>
				</div>

				<div class="space-y-2">
					<div>
						<label for="inputEmail">Email</label>
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="input"
						       autocomplete="email" required autofocus>
					</div>
					<div>
						<label for="inputPassword">Password</label>
						<input type="password" name="password" id="inputPassword" class="input"
						       autocomplete="current-password" required>
					</div>
					<button class="button-primary float-end" type="submit">
						Sign in
					</button>
				</div>
			</div>
			<span class="text-sm">No Account Yet ? <a href="{{ path('app_register') }}">Sign up</a></span>
		</div>
	</form>
{% endblock %}
